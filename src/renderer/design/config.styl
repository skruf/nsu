:root
  --font-family "Work sans", "system-ui", "proxima-nova", "proxima nova", "helvetica neue", "helvetica", "arial", sans-serif
  --text-size 14px
  --text-height 28px
  --font-weight 400
  --text-color #3c4b62
  --muted-color lighten(#3c4b62, 20%)
  --title-color #000
  --border-color #dfe4ea // #e6ebf1 // #ececec // #e6e6e6
  --border-radius 3px
  --border-width 1px
  --primary-color #B3315F
  --primary-alt-color lighten(#0069ff, 90%)
  --dangerous-color red
  --dangerous-alt-color lighten(red, 30%)
  --bg-alt-color #fff // #f6f9fb // #f1f4f7 // #fff
  --bg-color #f3f7fa // #f1f4f7 // #f5f8fb // #f4f7fb
  --nav-bg-color #020b1c
  --nav-text-color #ececec
  --nav-text-hover-color #fff
  --controller-font-weight 400
  --input-bg-color #fff // #f6f9fb
  // --box-shadow 0 1px 3px rgba(0,0,0,.08), 0 2px 4px rgba(0,0,0,.12)
  --box-shadow 0 1px 8px 0 rgba(223, 228, 234, 0.5)
  --accent-border linear-gradient(to right, #FFAA85, #B3315F)
  --button-bg linear-gradient(#FFAA85, #B3315F)
  --wrapper-width 1100px

