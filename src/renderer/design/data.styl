th
  font-weight inherit

.table-controls
  display flex
  align-items center
  margin-bottom 10px
.el-table
  .table-actions
    // margin-right 20px
    &, div
      padding 0
      line-height 1
    .el-button
      padding-top 12.5px
      padding-bottom 12.5px
      box-shadow none
      border var(--border-width) solid var(--border-color)

.table-actions.disabled
  pointer-events none
  cursor no-drop
  opacity 0.5

.el-table
  background-color transparent
  &, thead
    font inherit
    color inherit
.table-clickable
  .el-table__row
    cursor pointer
.el-pagination
  margin-top 20px
.el-pagination button:disabled
  background-color transparent
.el-pager li
  background none
  &.active
    color var(--primary-color)

.el-table td,
.el-table th.is-leaf,
.el-table--border::after,
.el-table--group::after,
.el-table::before
  border-color var(--border-color)
  height var(--border-width)
  border none
  height 0

.el-table th.is-leaf
  border-bottom-width 2px
  // padding-bottom 6px
  padding 0

.el-table th>.cell
  line-height 34px

.el-table tr,
.el-table th
  background-color transparent

.el-table tr
  box-shadow var(--box-shadow)

.el-table td
  border-bottom-width var(--border-width)
  background-color var(--bg-alt-color)
  padding 14px 0
  &:first-child
    border-top-left-radius var(--border-radius)
    border-bottom-left-radius var(--border-radius)
    // padding-left 15px
  &:last-child
    border-bottom-right-radius var(--border-radius)
    border-top-right-radius var(--border-radius)
    // padding-right 15px

.el-table__body
  border-spacing 0 10px

.el-table .cell
  line-height 18px

.el-table--enable-row-hover .el-table__body tr:hover>td
  background-color #fff
  opacity 0.5

.el-table thead,
.el-form .el-form-item__label
  color var(--muted-color)
  font-weight var(--controller-font-weight)
  padding-bottom 0

.el-table__empty-block,
.data-placeholder
  line-height 60px
  color #909399
  text-align center
  .el-button
    padding 0

.el-checkbox__inner
  border var(--border-width) solid var(--border-color)

.el-checkbox__inner
  width 16px
  height 16px

.el-input__inner,
.el-textarea__inner
  background-color var(--input-bg-color)
  border-radius var(--border-radius)
  font-weight var(--controller-font-weight)
  border none
  border var(--border-width) solid var(--border-color)
  border-color transparent
  box-shadow var(--box-shadow)
  &:hover, &:active
    border-color var(--border-color)

.el-form-item
  margin-bottom 18px

.el-input__inner,
.el-form-item__content
  line-height 42px
.el-input__inner
  height 42px

.el-form-item__error
  left 15px
  padding-top 3px
  font-weight var(--controller-font-weight)

.el-input__suffix
  right 10px

.info-grid
  display flex
  flex-wrap wrap
  padding 0 12px
.info-grid_item
  min-width 33.3333%
  padding 10px 15px
  display flex
.info-grid_item_key
  min-width 90px
.info-grid_item_value
  margin-left 10px

.el-date-editor .el-range-input,
.el-input__inner,
.el-textarea__inner
  &::placeholder
    color var(--muted-color)
    font-weight var(--controller-font-weight)

.el-date-editor--daterange.el-input,
.el-date-editor--daterange.el-input__inner,
.el-select
  width 100%
.el-range-editor .el-range-input
  width 50%
  background-color transparent

.fieldset
  display flex
  padding-top 20px
  padding-bottom 10px
  border-bottom var(--border-width) solid var(--border-color)
  &:first-child
    padding-top 0
  &:last-child
    border-bottom 0
    padding-bottom 0
.fieldset_details
  flex 1
  padding-right 20px
.fieldset_fields
  flex 2
