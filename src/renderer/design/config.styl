:root
  --font-family "Work sans", "system-ui", "proxima-nova", "proxima nova", "helvetica neue", "helvetica", "arial", sans-serif
  --text-size 14px
  --text-height 28px
  --font-weight 400
  --text-color #3c4b62
  --muted-color lighten(#3c4b62, 20%)
  --title-color #000
  --border-color #dfe4ea // #e6ebf1 // #ececec // #e6e6e6
  --border-radius 3px
  --border-width 1px
  --primary-color #4d9fe0
  --primary-alt-color lighten(#0069ff, 90%)
  --dangerous-color red
  --dangerous-alt-color lighten(red, 30%)
  --bg-color #fff // #f1f4f7 // #f5f8fb // #f4f7fb
  --bg-alt-color #f6f9fb // #f1f4f7 // #fff
  --nav-bg-color #020b1c
  --nav-text-color #ececec
  --nav-text-hover-color #fff
  --controller-font-weight 400
  --input-bg-color #f6f9fb
  // --box-shadow 0 3px 20px -10px hsla(0, 0%, 0%, 0.2)
  // --box-shadow 0 14px 21px -26px rgba(131, 168, 181, 0.25), 0 4px 24px -8px rgba(104, 127, 138, 0.3)
  --box-shadow 0 1px 3px rgba(0,0,0,.08), 0 2px 4px rgba(0,0,0,.12)
  --accent-border linear-gradient(to right, #55bee2, #4890f4)
  --button-bg linear-gradient(#55bee2, #4d9fe0)
  --wrapper-width 1100px
