{
  "name": "Stevnebehandler",
  "version": "0.0.4",
  "author": "Thomas Laaver <tholav@gmail.com>",
  "description": "Resultat- og stevne- behandler",
  "repository": {
    "type": "git",
    "url": "github:skruf/nsu"
  },
  "main": "src/main.js",
  "scripts": {
    "dev": "NODE_ENV=development concurrently 'npm run dev:frontend' 'npm run dev:backend'",
    "dev:frontend": "parcel ./src/app/index.html -d build/",
    "dev:backend": "electron .",
    "build:beta": "NODE_ENV=beta parcel build ./src/app/index.html -d build/ --public-url ./",
    "build:prod": "NODE_ENV=production parcel build ./src/app/index.html -d build/ --public-url ./",
    "pack:beta": "npm run build:beta && NODE_ENV=beta electron-builder --dir",
    "pack:prod": "npm run build:prod && NODE_ENV=production electron-builder --dir",
    "deploy:beta": "npm run build:beta && NODE_ENV=beta electron-builder",
    "deploy:prod": "npm run build:prod && NODE_ENV=production electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "tests": "jest --verbose",
    "tests:watch": "jest --watch",
    "tests:coverage": "jest --verbose --coverage",
    "lint": "eslint --ext .js,.vue src",
    "lint:fix": "eslint --ext .js,.vue --fix src"
  },
  "posthtml": {
    "recognizeSelfClosing": true
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "build": {
    "appId": "com.laaver.nsu",
    "productName": "Stevnebehandler",
    "artifactName": "Stevnebehandler-${version}.${ext}",
    "copyright": "Copyright Â© Thomas Laaver",
    "directories": {
      "output": "build"
    },
    "files": [
      "src/main.js",
      "src/preload.js",
      "build/*"
    ],
    "mac": {
      "icon": "build/icons/icon.icns",
      "target": {
        "target": "zip"
      }
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": {
        "target": "nsis"
      }
    },
    "linux": {
      "icon": "build/icons"
    },
    "publish": {
      "provider": "github",
      "private": true
    }
  },
  "dependencies": {
    "electron-log": "^3.0.5",
    "electron-updater": "^4.0.6",
    "electron-window-state": "^5.0.3",
    "lodash.clonedeep": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.1",
    "lodash.pickby": "^4.6.0",
    "pouchdb-adapter-idb": "^7.0.0",
    "pouchdb-adapter-memory": "^7.0.0",
    "rxdb": "^8.1.0",
    "rxjs": "^6.5.1",
    "uuid": "^3.3.2",
    "vue": "^2.6.10",
    "vue-hot-reload-api": "^2.3.3",
    "vue-i18n": "^8.11.2",
    "vue-moment": "^4.0.0",
    "vue-router": "^3.0.6",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@vue/component-compiler-utils": "^3.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-eslint": "^10.0.1",
    "babel-plugin-component": "^1.1.1",
    "concurrently": "^4.1.0",
    "electron": "^5.0.1",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-reload": "^1.4.0",
    "element-ui": "^2.8.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "flush-promises": "^1.0.2",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "stylus": "^0.54.5",
    "tailwindcss": "^0.7.4",
    "typescript": "^3.4.5",
    "vue-jest": "^3.0.4",
    "vue-template-compiler": "^2.6.10"
  }
}
