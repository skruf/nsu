.el-main,
.el-header,
.breadcrumb-bar
  margin-left 30px
  margin-right 30px

.el-main
  position relative
  background-color var(--bg-alt-color)
  box-shadow 0 0 15px -9px #000
  border-radius 3px
  margin-bottom 30px
  margin-top 20px
  padding 20px

.breadcrumb-bar
  padding-left 3px
  padding-right 3px

.el-aside
  padding-left 10px
  padding-right 10px
  background-image linear-gradient(-45deg, #1a1a21, #35242b, #24373e)
  // background-color var(--nav-bg-color)
  // border-right 1px solid var(--border-color)

.el-header
  display flex
  justify-content space-between
  align-items center
  padding-top 30px
  padding-bottom 20px
  padding-left 0
  padding-right 0
  // border-bottom 1px solid var(--border-color)

.el-collapse
  border-top 0

.el-collapse-item__header
  height auto
  line-height inherit

.page-controls
  .el-button
    padding-top 0
    padding-bottom 0

.page-actions
  position absolute
  left 0
  right 0
  bottom 0
  width 100%
  // background-color var(--bg-color)
  border-top 1px solid var(--border-color)
  padding 20px 30px
  [class*=" el-icon-"], [class^=el-icon-]
    font-size 15px
