:root
  --font-family "system-ui", "proxima-nova", "proxima nova", "helvetica neue", "helvetica", "arial", sans-serif
  --text-size 14px
  --text-height 28px
  --font-weight 300
  --text-color #3c4b62
  --muted-color lighten(#3c4b62, 20%)
  --title-color #000
  --border-color #e6ebf1 // #ececec // #e6e6e6
  --border-radius 30px
  --primary-color #0069ff
  --primary-alt-color lighten(#0069ff, 90%)
  --dangerous-color red
  --dangerous-alt-color lighten(red, 30%)
  --bg-color #f4f7fb // #fbfcfd
  --bg-alt-color #fff
  --nav-bg-color #020b1c
  --nav-text-color #ececec
  --nav-text-hover-color #fff
