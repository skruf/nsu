.screen
  display flex
  flex-direction column
  margin-left auto
  margin-right auto
  // max-width var(--wrapper-width)

.el-header
  display flex
  justify-content space-between
  flex-direction column
  align-items flex-start
  padding 20px 25px 55px
  // background-image var(--header-bg)
  // background-image url("../../../static/img/header-bg.svg")
  background-image url("../../../static/img/header-bg.png")
  background-size cover
  background-position bottom
  color #fff
  font-weight 300
  & + .el-main
    margin-top 0
  .h1, .h2, .h3, .h4, .h5, .h6, .small
    color inherit
    font-weight inherit

.page-titles
  text-transform capitalize
  .h1
    line-height 30px
    white-space nowrap
  .small
    margin-top -2px
    margin-bottom 2px
    margin-left 1px
  span:not(:first-child)
    margin-left -4px

.page-meta
  display flex
  justify-content space-between
  align-items flex-start
  width 100%

.el-main
  position relative
  padding 20px 25px
  display flex
  flex-direction column
  padding 0
  height 0
  & + .el-footer
    margin-top -20px

.el-dialog__header
  position relative
  &:before
    content ""
    width 100%
    height 4px
    background-image var(--accent-border)
    position absolute
    top 0
    left 0
    right 0
    border-top-left-radius 3px
    border-top-right-radius 3px

.content
  flex 1
  padding 20px 25px
  margin-bottom 20px
  // margin 20px 0

.el-footer
  padding 20px 0
  margin-left 25px
  margin-right 25px
  border-top var(--border-width) solid var(--border-color)
  justify-content flex-end
  display flex
  align-items center

.el-loading-mask
  background-color rgba(245, 247, 249, 0.85)

.v-modal
  background-color rgba(223, 228, 234, 0.85)
  opacity 1

.el-dialog
  box-shadow none
  border-radius 3px
  background-color var(--bg-color)
  &:not(.is-fullscreen)
    margin-top 5vh !important
.el-dialog__headerbtn
  font-size 27px
.el-dialog__header,
.el-dialog__footer
  background-color var(--bg-alt-color)
  box-shadow var(--box-shadow)
.el-dialog__header,
.dialog_content,
.el-dialog__footer
  padding 20px 25px
.el-dialog__header
  border-top-left-radius inherit
  border-top-right-radius inherit
.el-dialog__body
  padding 0
.dialog_content
  padding-top 10px
  padding-bottom 10px
.el-dialog__footer
  display flex
  justify-content flex-end
  border-bottom-left-radius inherit
  border-bottom-right-radius inherit

.el-notification
  box-shadow var(--box-shadow)
  border-radius var(--border-radius)
  border none

.el-alert
  line-height 1.2
  padding 20px 25px
  .el-alert__closebtn
    font-size 20px
  .el-alert__content
    padding 0 15px
  .el-alert__description,
  .el-alert__title
    font inherit
  .el-alert__title
    font-size 13px
    font-weight 600
  .el-alert__description
    margin-top 5px
    font-size 12px
